<Project>
  <!-- Allow all projects to restore TestRift.Server from the sibling repository when available -->
  <PropertyGroup>
    <LocalTestRiftServerFeed Condition="'$(LocalTestRiftServerFeed)' == ''">$(MSBuildThisFileDirectory)..\testrift-server\nuget\TestRift.Server\bin\Release</LocalTestRiftServerFeed>
  </PropertyGroup>

  <PropertyGroup Condition="Exists('$(LocalTestRiftServerFeed)')">
    <RestoreAdditionalProjectSources>$(RestoreAdditionalProjectSources);$(LocalTestRiftServerFeed)</RestoreAdditionalProjectSources>
  </PropertyGroup>
</Project>
